PREFIX dcat: <http://www.w3.org/ns/dcat#>
PREFIX dct: <http://purl.org/dc/terms/>
PREFIX eu-lang: <http://publications.europa.eu/resource/authority/language/>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>

SELECT DISTINCT ?publisher ?mbox ?any
WHERE {
    {
        ?dataset dct:publisher ?publisher .
        ?publisher foaf:mbox ?mbox .
    }
    UNION
    {
        ?publisher foaf:mbox ?mbox .
        ?dataset dct:publisher ?publisher ;
                 dct:language ?lang .
        FILTER (?lang = eu-lang:ENG)
    }

    ?dataset ?any ?anyValue .          # extra join inflating the union branches
    FILTER (BOUND(?anyValue) || !BOUND(?mbox))  # redundant but non-simplified
}

@prefix ex: <http://example.com/ns#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rsx: <http://rdf4j.org/shacl-extensions#> .
@prefix rdf4j: <http://rdf4j.org/schema/rdf4j#> .

[] a sh:ValidationReport;
  rdf4j:truncated false;
  sh:conforms false;
  sh:result [ a sh:ValidationResult;
      rsx:shapesGraph rdf4j:SHACLShapeGraph;
      sh:focusNode 1;
      sh:resultSeverity sh:Violation;
      sh:sourceConstraintComponent sh:OrConstraintComponent;
      sh:sourceShape ex:IdAndUsernameAreFunctionalPropertiesTogether;
      sh:value 1
    ] .

ex:IdAndUsernameAreFunctionalPropertiesTogether a sh:NodeShape;
  sh:or ([ a sh:PropertyShape;
        sh:maxCount 1;
        sh:path [
            sh:inversePath ex:id
          ]
      ] [ a sh:PropertyShape;
        sh:maxCount 1;
        sh:path [
            sh:inversePath ex:username
          ]
      ]);
  sh:targetObjectsOf ex:id, ex:username .

@prefix ex: <http://example.com/ns#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

[] a sh:ValidationReport;
  <http://rdf4j.org/schema/rdf4j#truncated> false;
  sh:conforms false;
  sh:result [ a sh:ValidationResult;
      sh:focusNode ex:validPerson1;
      sh:resultSeverity sh:Violation;
      sh:sourceConstraintComponent sh:OrConstraintComponent;
      sh:sourceShape ex:PersonShape;
      sh:value ex:validPerson1
    ] .

ex:PersonShape a sh:NodeShape;
  sh:or (ex:personShapeAgeInteger ex:personShapeAgeLong);
  sh:targetClass ex:Person .

ex:personShapeAgeInteger a sh:PropertyShape;
  sh:datatype xsd:integer;
  sh:path ex:age .

ex:personShapeAgeLong a sh:PropertyShape;
  sh:datatype xsd:long;
  sh:path ex:age .

@prefix ex: <http://example.com/ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf4j: <http://rdf4j.org/schema/rdf4j#> .

rdf4j:SHACLShapeGraph {
  ex:PersonShape a sh:NodeShape;
    sh:targetNode ex:validPerson1;
    sh:property ex:personShapeOr .
  
  ex:personShapeOr sh:path ex:age;
    sh:or (ex:personShapeAgeInteger ex:personShapeAgeLong) .
  
  ex:personShapeAgeInteger sh:datatype xsd:integer .
  
  ex:personShapeAgeLong sh:datatype xsd:long .
}

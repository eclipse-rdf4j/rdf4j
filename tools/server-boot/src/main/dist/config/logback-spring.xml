<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
	<property name="RDF4J_BASE" value="${org.eclipse.rdf4j.server.base:-${user.dir}}"/>
	<property name="LOG_DIR" value="${org.eclipse.rdf4j.server.logdir:-${RDF4J_BASE}/logs}"/>
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%thread] %-5level %logger{64} - %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_DIR}/rdf4j-server.log</file>
		<encoder>
			<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%thread] %-5level %logger{48} - %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_DIR}/rdf4j-server.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>20MB</maxFileSize>
			<maxHistory>14</maxHistory>
		</rollingPolicy>
	</appender>
	<logger name="org.eclipse.rdf4j.http.server" level="INFO" additivity="false">
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="FILE"/>
	</logger>
	<logger name="org.eclipse.rdf4j.workbench" level="INFO"/>
	<logger name="org.springframework.boot.web.embedded.tomcat.TomcatWebServer" level="INFO"/>
	<root level="WARN">
		<appender-ref ref="CONSOLE"/>
		<appender-ref ref="FILE"/>
	</root>
</configuration>
